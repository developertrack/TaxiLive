<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonOrange">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/appbackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonRoundedOrange">
        <item name="android:maxHeight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_rounded_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="TextView14spGrayPad">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:paddingTop">@dimen/space15</item>
        <item name="android:paddingBottom">@dimen/space15</item>
    </style>

    <style name="TextView14spBlackPad">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/space15</item>
        <item name="android:paddingBottom">@dimen/space15</item>
    </style>

    <style name="TextView12spGrayPad">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:paddingTop">@dimen/space5</item>
        <item name="android:paddingBottom">@dimen/space5</item>
    </style>

</resources>
